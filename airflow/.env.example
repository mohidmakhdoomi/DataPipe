# Airflow Configuration
AIRFLOW_UID=50000
AIRFLOW_PROJ_DIR=.

# Airflow Security Keys
AIRFLOW_FERNET_KEY=your_32_character_fernet_key_here_
AIRFLOW_SECRET_KEY=your_secret_key_here

# Airflow Web UI
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=your_secure_admin_password_here

# Database Configuration
POSTGRES_HOST=postgres-data
POSTGRES_PORT=5432
POSTGRES_DB=transactions_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ClickHouse Configuration
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_DB=analytics
CLICKHOUSE_USER=analytics_user
CLICKHOUSE_PASSWORD=your_secure_clickhouse_password_here

# Snowflake Configuration (for production)
SNOWFLAKE_ACCOUNT=your_snowflake_account_here
SNOWFLAKE_USER=your_snowflake_user_here
SNOWFLAKE_PASSWORD=your_secure_snowflake_password_here
SNOWFLAKE_ROLE=your_snowflake_role_here
SNOWFLAKE_DATABASE=your_snowflake_database_here
SNOWFLAKE_WAREHOUSE=your_snowflake_warehouse_here

# Kafka Streaming Settings
BATCH_SIZE=100
INTERVAL_SECONDS=60

# Data Generation Settings
NUM_USERS=1000
NUM_PRODUCTS=500
DAYS_OF_DATA=30

# Environment
AIRFLOW_ENV=development