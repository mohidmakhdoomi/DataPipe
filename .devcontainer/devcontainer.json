{
  "name": "spark-pyspark-dev",
  "dockerComposeFile": [
    "docker-compose.yml"
  ],
  "service": "dev",
  "runServices": [
    "spark-connect"
  ],
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "28.5.1",
      "enableNonRootDocker": "false",
      "moby": "false"
    },
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "1.34.1",
      "helm": "3.18.6"
    }
  },
  "workspaceFolder": "/datapipe",
  "overrideCommand": false,
  "updateRemoteUserUID": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "usernamehw.errorlens",
        "yzhang.markdown-all-in-one",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/datapipe/.devcontainer/.venv/bin/python",
        "python.analysis.typeCheckingMode": "basic",
        "ruff.enable": true,
        "python.testing.pytestEnabled": true,
        "python.terminal.activateEnvironment": true
      }
    }
  },
  "postCreateCommand": "cd .devcontainer && uv sync --locked",
  "mounts": [
    "source=uv-cache,target=/root/.cache/uv,type=volume",
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/root/.ssh,type=bind"
  ]
}