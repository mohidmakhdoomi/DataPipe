  namespace: data-ingestion
  labels:
    app: schema-registry
    component: schema-management
type: Opaque
stringData:
  user-info: |
    admin:admin-secret,admin
    probe:probe-pass,readonly
  probe-user: "probe"
  probe-password: "probe-pass"
  admin-user: "admin"
  admin-password: "admin-secret"